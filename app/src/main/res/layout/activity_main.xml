                android:background="#3E4553"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:id="@+id/l14"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#3E4553"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:id="@+id/l15"
